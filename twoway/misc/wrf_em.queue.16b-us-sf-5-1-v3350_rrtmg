 topo_shading                        = 1,
 shadlen                             = 25000.,
 num_land_cat                        = $NUM_LAND_USE_TYPE,
 /

 &fdda
 grid_fdda                           = 1,    
 grid_sfdda                          = 1,
 pxlsm_soil_nudge                    = 1,
 sgfdda_inname                       = "wrfsfdda_d01",
 sgfdda_end_h                        = 132,
 sgfdda_interval_m                   = 180,
